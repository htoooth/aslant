@import './common'
@import './main-header'
@import './main-nav'
@import './influxdb'
@import './setting'

.home-wrapper
  h3
    text-indent 1em
    font-size 16px
    margin 10px 0 0 0
    line-height 2em
  .columns
    margin 0 8px
    .column
      margin 8px
      height 200px
      display block
      &:hover
        text-decoration none
        .pt-icon-eye-open
          color $COLOR_BLUE
      h4
        white-space nowrap
        text-overflow ellipsis
        overflow hidden
    .info
      position absolute
      right 0
      bottom 0
      background-color $COLOR_WHITE
      padding 1px 5px
      border-top 1px solid $COLOR_GRAY
      border-left 1px solid $COLOR_GRAY
      border-radius top left 3px
      
    @media only screen and (max-width : 1000px)
      .cloumn-wrapper
        width 33.3333%
    @media only screen and (max-width : 800px)
      .cloumn-wrapper
        width 50%