@import './common'

.column-1-12, .column-1-6, .column-1-4, .column-5-12, .column-1-2, .column-7-12, .column-2-3, .column-3-4, .column-5-6, .column-11-12, .column-1
  display inline-block
  vertical-align top
  
.column-1-12
  width 8.3333%
.column-1-6
  width 16.6667%
.column-1-4
  width 25%
.column-1-3  
  width 33.3333%
.column-5-12
  width 41.6667%
.column-1-2
  width 50%
.column-7-12
  width 58.3333%
.column-2-3
  width 66.6667%
.column-3-4
  width 75%
.column-5-6
  width 83.3333%
.column-11-12
  width 91.6667
.column-1
  width 100%

.table-view
  width 100%
  .functions
    padding 10px 0
    border-top 1px solid $COLOR_GRAY
    .pages-wrapper
      float right
      margin-top 4px
    input
      width 160px
.table
  width 100%
  border-collapse collapse
  border-spacing 0
  thead
    border-top 1px solid $COLOR_GRAY
    border-bottom 1px solid $COLOR_GRAY
    background-color #f1f9fd
  th, td
    padding 10px 15px
    border none
    text-align center
  td.switch-wrapper
    position relative
    .pt-switch
      position absolute
      top 50%
      left 50%
      margin-top -5px
      margin-left -15px 
  tbody tr
    &:nth-child(even)
      background-color #fff
    &:nth-child(odd)
      background-color #f4f8fb

.dropdown-selector
  margin-bottom 15px
  position relative
  .clear
    position absolute
    right 0
    line-height 30px
    z-index 1
    width 20px
    color $COLOR_GRAY
    &:hover
      color $COLOR_BLUE
  .pt-popover-target
    width 100%
    display block
    .pt-input
      width 100%

.columns
  .column
    background-color #fff
    border 1px solid $COLOR_GRAY
    border-radius 3px
    position relative
    h4
      margin 0
      line-height 32px
      font-size 14px
      text-indent 1em
      font-weight normal
      border-bottom 1px solid $COLOR_GRAY
      background-color $COLOR_WHITE
      a
        text-indent 0
        padding 0 10px
        text-decoration none
        color $COLOR_LIGHT_BLACK
        &:hover
          color $COLOR_BLUE
    p
      font-size 13px
      color $COLOR_LIGHT_BLACK
      margin 20px


.influx-visualization-view
  margin 8px
  background-color #fff
  border 1px solid $COLOR_GRAY
  border-radius 3px
  h3
    margin 0
    line-height 32px
    font-size 14px
    text-indent 1em
    font-weight normal
    border-bottom 1px solid $COLOR_GRAY
    color $COLOR_LIGHT_BLACK
    background-color $COLOR_WHITE
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
    a
      text-indent 0
      padding 0 7px
      color $COLOR_LIGHT_BLACK
      &:hover
        color $COLOR_BLUE
      .pt-icon-standard
        font-size 12px
          
.influx-visualization
  margin 15px
  .chart
    height 250px
    background-color #fff
    &.circle
      height 160px
      padding 10px 0
    svg
      height 100%
  .table th .pt-icon-standard
      margin-left 5px
      width 18px
      
.co-dropdown-selector
  position relative
  &:hover
    .remove-condition
      display block
  .dropdown-selector
    width 100%
  .remove-condition
    position absolute
    left 100%
    padding-left 5px
    margin-left -1px
    display none
    a
      display block
      border 1px solid $COLOR_GRAY
      height 25px
      width 25px
      letter-spacing normal
      background-color #fff
      border-radius 3px
      text-align center
      line-height 24px
      color #999
      font-size 12px
      margin-top 3px
      &:hover
        color #666
  .relation
    position absolute
    left 50%
    letter-spacing normal
    width 20px
    text-align center
    margin-left (-(@width / 2))
    margin-top 4px
    
.pages
  line-height 24px
  span
    color $COLOR_BLUE
  .page
    display inline-block
    margin 0 5px
    &.active
      background-color $COLOR_BLUE
      color #fff
      padding 0 8px

.date-time-range-picker
  width 610px
  position relative
  background-color #fff
  border 1px solid $COLOR_GRAY
  padding-bottom 10px
  .start, .end
    position absolute
  .start
    left 200px
  .end
    left 420px
  .controls
    line-height 30px
    a
      font-size 14px
      display inline-block
      text-decoration none
      margin 0 15px 0 5px
      span
        margin-right 3px

.gesture
  width 185px
  margin auto
  cursor pointer
  .circle
    display inline-block
    height 40px
    width @height
    border 3px solid $COLOR_BLUE
    border-radius @height
    background-color #fff
    margin 10px
    &.active
      background-color $COLOR_GREEN