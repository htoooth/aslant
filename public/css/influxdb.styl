@import './common'

.influx-configs-wrapper, .influxdb-servers-wrapper, .influxdb-dashboards-wrapper
  padding 15px 0
  .op
    a
      margin 0 5px

.influx-dashboard-visualizations-wrapper
  .full-screen
    position fixed
    left 0
    top 0
    right 0
    bottom 0
    z-index 9
    background-color rgba(0, 0, 0, 0.4)
    .influx-visualization-view
      margin 0
  .interval-selector, .time-selector
    width 180px
    display inline-block
    margin 0 5px
  .influx-visualization-view
    .table
      thead
        border-top none
    .influx-visualization
      margin 0
  .date-time-range-picker
    position absolute
    right 10px

.server-status-wrapper
  .server-status
    border-bottom 1px solid $COLOR_GRAY
    padding 15px
    margin-bottom 15px
    .column-wrapper
      float left
      width 20%
      @media only screen and (max-width : $SCREEN_BIG)
        width 33.3333%
      @media only screen and (max-width : $SCREEN_NORMAL)
        width 50%
      @media only screen and (max-width : $SCREEN_SMALL)
        width 100%
    h3
      line-height 2
      margin 0
    table
      a
        margin 0 5px
  .dbs
    margin 0
    padding 0
    list-style none
    li
      margin 0 10px 10px 0
      a
        color #fff
  .measurements
    margin 0
    padding 0
    list-style 0
    li
      display inline-block
      margin-right 10px
      padding 3px 15px
  .columns
    .column
      margin 8px
.add-influx-wrapper
  @media only screen and (max-width : $SCREEN_MEDIUM)
    display block
  .influx-ql-wrapper
    background-color #fff
    padding 10px
    border-bottom 1px solid $COLOR_LIGHT_GRAY
    .ql-input
      margin 0 85px 0 70px
    input
      width 100%
      line-height 18px
  .config-wrapper
    overflow-scrolling touch
    background-color $COLOR_DARK
    color $COLOR_GRAY
    border-left 1px solid $COLOR_WHITE
    position fixed
    bottom 0
    right 0
    height 400px
    left $MAIN_NAV_WIDTH
    overflow-y auto
    padding-left 10px
    @media only screen and (max-width: $SCREEN_SMALL)
      left 0
    h4
      color $COLOR_GRAY
      margin 0
      padding 10px 0
    h5
      color $COLOR_GRAY
      margin 0
      padding 8px 0
    .visualization-name
      width 100%
      color $COLOR_LIGHT_BLACK
    .basic-selectors
      display flex
      .dropdown-selector
        flex 1
        margin-right: 10px

    .query-selectors
      .co-dropdown-selector-wrapper
        $ctrlItemWidth = 30px
        .remove-condition
          float right
          margin-right 10px
          a
            display block
            border 1px solid $COLOR_GRAY
            height 29px
            width @height
            letter-spacing normal
            background-color #fff
            border-radius 3px
            text-align center
            line-height @height - 1
            color #999
            font-size 12px
            &:hover
              color #666
        .co-dropdown-selector
          margin-right $ctrlItemWidth + 20px
    .other-options-wrapper
      .column-1-2, .s-column-1-2
        margin-bottom 10px
        padding-right 10px
  .date-time-range-picker
    top -280px
    position absolute
    z-index 1

.influx-dashboard-view
  margin 15px 0
  td
    a.disabled
      color $COLOR_GRAY
    .pt-icon-standard
      margin 0 5px
      width 18px
  .save-wrapper, .desc-wrapper
    margin 15px
    .pt-input-group
      flex 1
    .save
      width 100px
