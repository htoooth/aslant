@import './common'

.influxdb-servers-wrapper
  margin 20px
  table
    width 100%
    .op
      a
        display inline-block
        width 20px
        text-align center
.server-status-wrapper
  .server-status
    border-bottom 1px solid $COLOR_GRAY
    padding 15px
    margin-bottom 15px
    h3
      line-height 2
      margin 0
    table
      width 100%
  .dbs
    margin 0
    padding 0
    list-style none
    li
      display inline-block
      background-color $COLOR_INDIGO
      margin-right 10px
      padding 3px 15px
      border-radius 3px
      &.active
        background-color $COLOR_BLUE
      a
        color #fff
  .measurements
    margin 0
    padding 0
    list-style 0
    li
      display inline-block
      margin-right 10px
      padding 3px 15px
  .keys-wrapper:nth-child(5n)
    .keys
      margin-right 0
  .keys
    margin 0 10px 10px 0
    border 1px solid $COLOR_LIGHT_GRAY
    h4
      margin 0
      line-height 2em
      background-color $COLOR_GRAY
    ul
      margin-left 30px
      padding 0
      li
        span
          color $COLOR_BLUE
          margin-left 3px