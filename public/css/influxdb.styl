@import './common'

.influx-configs-wrapper, .influxdb-servers-wrapper
  margin 15px 0
  .op
    a
      margin 0 5px

.server-status-wrapper
  .server-status
    border-bottom 1px solid $COLOR_GRAY
    padding 15px
    margin-bottom 15px
    h3
      line-height 2
      margin 0
    table
      width 100%
      a
        margin 0 5px
  .dbs
    margin 0
    padding 0
    list-style none
    li
      margin 0 10px 10px 0
      a
        color #fff
  .measurements
    margin 0
    padding 0
    list-style 0
    li
      display inline-block
      margin-right 10px
      padding 3px 15px
  .keys-wrapper:nth-child(5n)
    .keys
      margin-right 0
  .keys
    margin 0 10px 10px 0
    h4
      margin 0
      line-height 2em
      text-indent 1em
      background-color $COLOR_GRAY
    ul
      margin-left 30px
      padding 0
      li
        span
          color $COLOR_BLUE
          margin-left 3px
.add-influx-wrapper
  $configWrapperWidth = 300px
  .influx-content-wrapper
    margin-left $configWrapperWidth
  .influx-ql-wrapper
    background-color #fff
    padding 10px
    border-bottom 1px solid $COLOR_LIGHT_GRAY
    .ql-input
      margin 0 85px 0 70px
    input
      width 100%
      line-height 18px
  .chart-wrapper
    margin 15px
    height 300px
    svg
      height 100%
  .chart-config-wrapper
    margin 15px
    .save
      width 100%
  .config-wrapper
    width $configWrapperWidth
    padding 0 30px 20px 10px
    position fixed
    left 0
    bottom 0
    top $MAIN_HEADER_HEIGHT
    overflow-scrolling touch
    background-color $COLOR_DARK
    color $COLOR_GRAY
    overflow-y auto
    h4
      color $COLOR_GRAY
      margin 10px 0
    h5
      color $COLOR_GRAY
      margin 8px 0
    .visualization-name
      width 100%
      color $COLOR_LIGHT_BLACK
    .dropdown-selector
      margin-bottom 15px
      position relative
      .pt-popover-target
        width 100%
        display block
        .pt-input
          width 100%
    .co-dropdown-selector-wrapper
      position relative
      &:hover
        .remove-condition
          display block
      .remove-condition
        position absolute
        left 100%
        padding-left 5px
        margin-left -1px
        display none
        a
          display block
          border 1px solid $COLOR_GRAY
          height 25px
          width 25px
          letter-spacing normal
          background-color #fff
          border-radius 3px
          text-align center
          line-height 24px
          color #999
          font-size 12px
          margin-top 3px
          &:hover
            color #666
    .co-dropdown-selector
      position relative
      &:hover
        .remove-condition
          display block
      .dropdown-selector
        width 100%
      .remove-condition
        position absolute
        left 100%
        padding-left 5px
        margin-left -1px
        display none
        a
          display block
          border 1px solid $COLOR_GRAY
          height 25px
          width 25px
          letter-spacing normal
          background-color #fff
          border-radius 3px
          text-align center
          line-height 24px
          color #999
          font-size 12px
          margin-top 3px
          &:hover
            color #666
      .relation
        position absolute
        left 50%
        letter-spacing normal
        margin-left -3px
        margin-top 4px
      