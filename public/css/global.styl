@import './constant'
*
  box-sizing border-box
  &:before, &:after
    box-sizing border-box
.clearfix:before, .clearfix:after
  display table
  content " "
.clearfix:after
  clear both
  
body
  font 14px 'Helvetica Neue', Helvetica, Arial, sans-serif
  line-height 1.4em
  background $BG_COLOR
  color #4d4d4d
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-weight 300

input[type="text"], input[type="password"], .pure-form input[type="text"], .pure-form input[type="password"], .pure-form textarea
  font-size 13px
  border-radius 4px
  box-shadow inset 0 2px 2px #e9e9e9
  border 1px solid $DARK_GRAY_BORDER_COLOR
  line-height 16px
  padding 6px 10px 5px
  &:focus
    border 1px solid $DARK_GRAY_BORDER_COLOR
    outline none
    box-shadow inset 0 2px 2px #e9e9e9, 0 0 10px 0 rgba(73, 107, 125, 0.3)

a
  color #265778
  text-decoration none
  &:hover
    color #174c6f
.tac
  text-align center
.pullRight
  float right
.pullLeft
  float left
.mright3
  margin-right 3px
.mleft5
  margin-left 5px
.mright5
  margin-right 5px
.mrgiht10
  margin-right 10px
.mtop10
  margin-top 10px
.mbottom10
  margin-bottom 10px
.invisible
  visibility hidden
  
.maskContainer
  background-color rgba(0, 0, 0, 0.8)
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  z-index 8
  
.warning
  background-color rgb(223, 117, 20)
  padding 6px 15px
  color #f0f0f0
  border-radius 3px
  .fa
    margin-right 3px
