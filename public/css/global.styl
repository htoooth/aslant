@import './common'

*
  box-sizing border-box
.clearfix:before, .clearfix:after
  display table
  content " "
.clearfix:after
  clear both

body
  margin 0
  font-size 14px
  line-height 1.5
  background #e6eaf0
  color #333
.content-wrapper
  margin-top $MAIN_HEADER_HEIGHT
  margin-left $MAIN_NAV_WIDTH
  &.fill
    margin-left 0
.overflow-y
  overflow-y auto
  -webkit-overflow-scrolling touch
.noselect
  touch-callout none
  user-select none
.font12
  font-size 12px
.gray
  color #666
.tac
  text-align center
.tar
  text-align right
.pull-right
  float right
.pull-left
  float left
.mleft5
  margin-left 5px
.mleft10
  margin-left 10px
.mright5
  margin-right 5px
.mright10
  margin-right 10px
.mtop10
  margin-top 10px
.margin15
  margin 15px
.pt-icon-standard.disabled
  color $COLOR_GRAY
.pt-input
  appearance none

@import './widget'
@import './login-register'
