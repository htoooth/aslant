@import './constant'
.influxdbVisualizationEditor
  margin 10px 0 0 $NAV_WIDTH + 10
  $showServerSelectorWidth = 50px
  position relative
  .pure-button
    background-color #f0f0f0
    border 1px solid $GRAY_BORDER_COLOR
    border-radius 3px
  .showServerSelector
    width $showServerSelectorWidth
  .influxQl
    margin-left $showServerSelectorWidth + 10
    margin-right 100px
  .basicSelector
    position absolute
    border 1px solid $GRAY_BORDER_COLOR
    border-radius 3px
    padding 0 10px
    z-index 2
    width 150px
    background-color $BG_COLOR
    .influxdbSelector
      margin-bottom 10px
  .filterSelector, .datePickerSelector, .extractSelector, .groupBySelector
    margin-right 10px
    border 1px solid $GRAY_BORDER_COLOR
    padding 10px
    border-radius 3px
  .filterSelector
    .influxdbSelector
      margin-bottom 10px
  .datePickerSelector
    .dateTimePicker
      margin-bottom 10px
  .groupByContainer
    position relative
    .groupBySelector
      position absolute
      z-index 1
      right -3px
      top 20px
      width 300px
      background-color $BG_COLOR
      padding-bottom 0
      margin-right 0
  .seriesTable
    table
      width 100%
      background-color #fff
      th .fa
        width 10px
        margin-left 3px